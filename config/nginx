upstream mishkin {
    server unix:/home/mishkin/mdv/mishkin.sock;
}


server {
    listen 80;

    # TODO: change this for digital ocean config
    # server_name mishkin.com www.mishkin.com;
    server_name _;

    gzip on;
    gzip_comp_level 6;
    gzip_min_length 256;
    gzip_proxied any;
    gzip_types
        application/javascript
        application/json
        image/svg+xml
        text/css
        text/plain
    ;

    location ~ ^/static/(.*) {
        # TODO: change this for digital ocean config
        # root /home/mishkin/mdv/mishkin/;
        root /root/mishkin;

        try_files /build/$1 /public/$1 =404;
    }

    location / {
        proxy_pass http://mishkin/;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header X-NginX-Proxy true;
        proxy_redirect off;
    }
}
